<%- include('header') %>
    <h1>Crear notas</h1>
    <form action="/notas/crear" method="POST">
        <div>
            <label for="">Titulo</label>
            <input type="text" name="titulo" required>
        </div>
        <div>
            <label for="">Texto</label>
            <input type="text" name="texto" required>
        </div>
        <div>
            <label for="">Estado</label>
            <input type="radio" name="estado" value="progreso" required>
            <label for="">Progreso</label>
            <input type="radio" name="estado" value="incompleta" required>
            <label for="">Incompleta</label>
            <input type="radio" name="estado" value="completa" required>
            <label for="">Completa</label>
        </div>
        <button type="submit">Crear Nota</button>
    </form>
<%- include('footer') %>
